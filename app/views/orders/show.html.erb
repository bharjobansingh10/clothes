<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>
  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <%= @order.customer.email %>
    <br>
    Order placed <%= @order.created_at %>
  </div>
  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
      </thead>
      <tbody>
      <%= render 'product' %>
      </tbody>
      <tfoot>
      <tr><th colspan="3"><h3>Invoice</h3></th></tr>
      <tr>
      <th colspan="3">
        Address:
      </th>
      <th>
        <%= current_user&.address %>
      </th>
    </tr>
    <tr>
    <th colspan="3">
      Province:
    </th>
    <th>
      <%= current_user&.province %>
    </th>
  </tr>
      <tr>
      <th colspan="3">
        PST:
      </th>
      <th>
        $<%= (5/@order.total_amount*100).to_f.round(2) %>
      </th>
    </tr>
    <tr>
    <th colspan="3">
      GST:
    </th>
    <th>
      $<%= (12/@order.total_amount*100).to_f.round(2) %>
    </th>
  </tr>
      <tr>
        <th colspan="3">
          GRAND TOTAL:
        </th>
        <th>
          $<%= @order.total_amount %>
        </th>
      </tr>
      <tr>
      <th colspan="3">
        After Tax GRAND TOTAL:
      </th>
      <th>
        $<%= (@order.total_amount - (12/@order.total_amount*100).to_f - (5/@order.total_amount*100).to_f).round(2) %>
      </th>
    </tr>
      </tfoot>
    </table>
  </div>
</section>
